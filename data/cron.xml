<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_fetch_modbus_data" model="ir.cron">
            <field name="name">Modbus: Fetch All Device Data</field>
            <field name="model_id" ref="model_modbus_device"/>
            <field name="state">code</field>
            <field name="code">model._cron_fetch_all_data()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo> 